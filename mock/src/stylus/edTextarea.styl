.container
  position relative
  border 1px solid rgba(116,175,248,.3)
  border-radius 6px
  margin 1em 
  box-shadow: rgba(202,226,230,.48) 6px 2px 9px 0px, rgba(255,255,255,.8) -6px -2px 15px 0px;
  transition: box-shadow .05s
  &:focus-within
    box-shadow: rgba(255,255,255,.3) 0px 0px 9px 0px, rgba(255,255,255,.8) -6px -2px 15px 0px;
  textarea 
    resize none
    border-radius 6px
    border 0px solid rgba(0,0,0,.0)
    display block
    padding 1em
    color rgba(0,0,0,.8)
    font-size .8rem
    width 100%
    max-width 100%
    min-width 100%
    background transparent
    box-sizing border-box
    box-shadow: inset 1px 0px 7px 0px transparent
    transition: box-shadow .05s
    &:focus
      resize auto !important
      outline 1.5px solid rgb(227, 163, 171)
      box-shadow: inset 1px 0px 7px 0px rgba(227, 163, 171, .3)
      background: rgba(255, 255, 255, .05)